@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - mattjgrant.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>


    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#welcome">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">

        <div id="welcome" class="container text-center">
            <div class="row">
                <div class="col-md-2 col-md-offset-5 thumbnail">
                    <img class="img-responsive" src="@Url.Content("~/Content/images/mg.jpg")" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1>Hi, i'm Matt</h1>
                    <p>welcome to my personal website</p>
                </div>
            </div>
        </div>
       
        <div id="about" class="container content-section text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="">About</h2>
                    <p>
                        I'm a software developer from Wellington, New Zealand.
                        This is my personal space on the interwebs. It is a platform for me to try out new tech and hopefully in the future put some of my thoughts and projects
                    </p>
                </div>
            </div>
        </div>
        <div id="contact" class="container content-section text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2>Contact me</h2>
                    <p>
                        Send me an email at
                    </p>
                    <p>
                        <a href="mailto:spiralout618@gmail.com">spiralout618@gmail.com</a>
                    </p>
                    <p>
                        Find my stuff and contact me at these places too
                    </p>
                </div>
            </div>


            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href="https://twitter.com/spiralout618" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                        </li>
                        <li>
                            <a href="https://github.com/spiralout618" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                        </li>
                        <li>
                            <a href="https://plus.google.com/u/0/110935418444712114139/posts" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <hr />
        <footer></footer>
    </div>
</body>
</html>
